<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CapaHelp- Profile</title>
    <link rel="icon" sizes="32x32" type="jpg/png" href="/public/img/logo.png">
    <link rel="stylesheet" href="/public/styles/User/userGlobal.css">
    <script defer src="https://kit.fontawesome.com/96a70be8ea.js" crossorigin="anonymous"></script>
    <script defer src="/public/script/User/hamburger.js"></script>
</head>

<body>
    <main class="ticket-main create-main">
        <%- include("../partials/User/userHeader.ejs") %>
            <div class="hero solution-hero ticket-hero">
                <p class="solutions-top ticket-top profile-top">
                    <span><a href="/user">Home</a></span> > <a href="/user/update/profile">Edit Profile</a>
                </p>
                <div class="edit-div">
                    <div>
                        <h1 class="hero-title profile-title">Edit Profile</h1>
                    </div>
                    <div>
                        <p class="clickable-user clickable2 profile-clickable">EO</p>
                    </div>
                </div>
                <form class="profile-form">
                    <div class="form-box profile-form-box">
                        <div class="form-div">
                            <label for="firstname">First Name</label>
                            <input type="text" id="firstname" value="Emmanuel">
                        </div>
                        <div class="form-div">
                            <label for="lastname">Last Name</label>
                            <input type="text" id="lastname" value="Onyenegbutu">
                        </div>
                    </div>
                    <div class="form-box profile-form-box">
                        <div class="form-div">
                            <label for="profile-email">Email</label>
                            <input type="email" id="profile-email" value="emmao@capacitybay.org">
                        </div>
                        <div class="form-div">
                            <label for="phone">Phone Number</label>
                            <input type="number" id="phone" value="2348185685922">
                        </div>
                    </div>
                    <div class="form-box profile-form-box profile-form-box2">
                        <div class="form-div">
                            <label for="country">Country</label>
                            <input type="text" id="country" value="Nigeria">
                        </div>
                    </div>
                    <div class="hero-toggles create-toggles profile-password">
                        <div class="view password-view">
                            <a href="./password.html">Change Password</a>
                        </div>
                    </div>
                    <div class="hero-toggles create-toggles">
                        <div class="view">
                            <a>Cancel</a>
                        </div>
                        <div class="create">
                            <a>Update</a>
                        </div>
                    </div>
                </form>
            </div>
    </main>
</body>

</html>